<!DOCTYPE html>
<!-- Coding By CodingNepal - youtube.com/codingnepal -->
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Weather Cloth Suggesstion Application</title>
    <link rel="stylesheet" href="../css/home.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <!-- Linking BoxIcon for Icon -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <script src="service-worker.js"></script>
    <script src="../js/service-client.js"></script>
  </head>
  <body>
    
    <div class="wrapper">
      
      <header>Weather Cloth Suggesstion Application
        <span style="position: absolute; left: 20%;"><a href="/home">Home</a></span>
        <span style="position: absolute; right: 20%;"><a href="/logout">logout</a></span>
      </header>
      <div class="container">
  
        <div class="layout">
          <div class="col col-main input-part">
            <div class="content">
              <form action="/" method="get">
              <input type="text" name="cityName" id="cityName" spellcheck="false" placeholder="Enter city name">
            </form>
              <div class="separator"></div>
              <button>Auto Fill current location</button>
            </div>
          </div>
          <div class="col col-complementary weather-part" role="complementary">
            <div class="layout">
              <div class="col col-main">
            <div >
              <span class="image-part">
                <img src="<%= response['wIcon']%>" alt="Weather Icon">
              </span>
            </div>
              
              <div class="temp">
                <span class="numb"><%= response["temp"]%></span>
                <span class="deg">°</span>C
              </div>
              <div class="weather"><%= response["description"]%></div>
              <div class="location">
                <i class='bx bx-map'></i>
                <span><%= response["location"]%></span>
              </div>
              <div class="bottom-details">
                <div class="column feels">
                  <i class='bx bxs-thermometer'></i>
                  <div class="details">
                    <div class="temp">
                      <span class="numb-2"><%= response["feels_like"]%></span>
                      <span class="deg">°</span>C
                    </div>
                    <p>Feels like</p>
                  </div>
                </div>
                <div class="column humidity">
                  <i class='bx bxs-droplet-half'></i>
                  <div class="details">
                    <span><%= response["humidity"]%></span>
                    <p>Humidity</p>
                  </div>
                </div>
              </div>
            </div>  
          </div>
        </div>
        <div class="col col-complementary  input-part">
          <span class="recommendation-part"><b>Recommended Cloth for the weather</b></span>
          <div>
            <span><%= response["recommendation"]%></span>
          </div>
          
          <% if (userId!=undefined) { %>
            <div>---------------------------</div>
           <b> You want to customize recommendation of cloths. Click Below Button !</b>
            <form method="get" action="/personalize">
              <div><button>Personalize</button></div>
            </form>
            
            <% } %>
        </div>
        </div>   
      
      
      </div>
      <input type="hidden" name="latitude" id="latitude">
      <input type="hidden" name="longitude" id="longitude">
   
  </div>
    
    <script src="../js/script.js"></script>
 
  </body>
</html>
