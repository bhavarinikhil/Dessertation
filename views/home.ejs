<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Weather Cloth Suggesstion Application</title>
    <link rel="stylesheet" href="../css/home.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Linking BoxIcon for Icon -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
  </head>
  <body>
    
    <div class="wrapper">
      
      <header>Weather Cloth Suggesstion Application</header>
     
      <section class="input-part">
        <p class="info-txt"></p>
        <div class="content">
          <form action="/" method="get">
          <input type="text" name="cityName" id="cityName" spellcheck="false" placeholder="Enter city name">
        </form>
          <div class="separator"></div>
          <button>Auto Fill current location</button>
        </div>
      </section>
      <section class="weather-part">
        <img src="<%= response['wIcon']%>" alt="Weather Icon">
        <div class="temp">
          <span class="numb"><%= response["temp"]%></span>
          <span class="deg">°</span>C
        </div>
        <div class="weather"><%= response["description"]%></div>
        <div class="location">
          <i class='bx bx-map'></i>
          <span><%= response["location"]%></span>
        </div>
        <div class="bottom-details">
          <div class="column feels">
            <i class='bx bxs-thermometer'></i>
            <div class="details">
              <div class="temp">
                <span class="numb-2"><%= response["feels_like"]%></span>
                <span class="deg">°</span>C
              </div>
              <p>Feels like</p>
            </div>
          </div>
          <div class="column humidity">
            <i class='bx bxs-droplet-half'></i>
            <div class="details">
              <span><%= response["humidity"]%></span>
              <p>Humidity</p>
            </div>
          </div>
        </div>
      </section>
      </div>
      <input type="hidden" name="latitude" id="latitude">
      <input type="hidden" name="longitude" id="longitude">
   
  </div>
    
    <script src="../js/script.js"></script>
 
  </body>
</html>
